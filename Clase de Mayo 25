CREATE TABLE EMPLEADO(ID_EMPLEADO INTEGER,
NOMBRE_EMPLEADO VARCHAR2(30),
SUELDO_BASE FLOAT,
FECHA_CONTRATACION DATE,
CONSTRAINT PK_ID_EMPLEADO PRIMARY KEY (ID_EMPLEADO));

--ACTIVAMOS LA CONSOLA DE ORACLE, SEINVOCA SOLAMENTE UNA VEZ POR SESION DE SCI--

SET SERVEROUTPUT ON;


DECLARE
MY_FECHA DATE;
BEGIN
MY_FECHA:=TO_DATE('02-MAY-2016','DD-MON-YYYY');
INSERT INTO EMPLEADO VALUES(2,'JUAN',250,MY_FECHA);
DBMS_OUTPUT.PUT_LINE('SE GUARDO TU REGISTRO CON EXITO AMIGUITO!!');
EXCEPTION;
WHEN OTHERS
THEN 
DBMS_OUTPUT.PUT_LINE('LO SIENTO PERO METISTE LA PATA TONTO (A)');
END;
/

SELECT * FROM EMPLEADO;

/* VEREMOS UN NUEVO OBJETO DE BASE DE DATOS QUE SE LLAMA PROCEDIMIENTO ALMACENADO*/

CREATE OR REPLACE PROCEDURE SUMAA 
(
  VALOR1 IN NUMBER  
, VALOR2 IN NUMBER  
) AS
RESULTADO NUMBER;
BEGIN
RESULTADO:=VALOR1+VALOR2;
  DBMS_OUTPUT.PUT_LINE('LA SUMA ES: '||RESULTADO);

END SUMAA;




BEGIN 
SUMAA(5,4);
END;
/




